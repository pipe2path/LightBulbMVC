
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<style>
    .jumbotron{ margin-top: 20px;}
</style>

<div class="jumbotron">
    @using (Ajax.BeginForm("Process", "Home", null, new AjaxOptions { UpdateTargetId = "results", InsertionMode=InsertionMode.Replace}, new {@class = "form-inline"}))
    {
        <div class="form-group">
            <label for="inputNumberOfPeople">Number of People</label>
            <input type="text" name="people" class="form-control key-numeric" id="people" placeholder="Enter number of people" required/>
        </div>
        <div class="form-group">
            <label for="inputNumberOfBulbs">Number of Light Bulbs</label>
            <input type="text" name="bulbs" class="form-control key-numeric" id="bulbs" placeholder="Enter number of light bulbs" required />
        </div>

        <hr/>
        <input id="btnProcess" class="btn btn-primary btn-lg" type="submit" value="Submit" />
    }
</div>
<div id="results">
    @Html.Partial("Results", new LightBulbMVC.Models.LightBulbViewModel())
</div>

<script>
    $(document).ready(function () {
        $('.key-numeric').keypress(function (e) {
            var verified = (e.which == 8 || e.which == undefined || e.which == 0) ? null : String.fromCharCode(e.which).match(/[^0-9]/);
            if (verified) { e.preventDefault(); }
        });
    });
</script>

